{
  "name": "use-model",
  "version": "0.1.0",
  "description": "Lightweight global state manager of React hooks based on Immer.",
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "files": [
    "dist/*",
    "README.md"
  ],
  "scripts": {
    "start": "parcel index.html",
    "test": "ava",
    "cov": "nyc ava",
    "report": "nyc --reporter=lcov ava",
    "coverage": "codecov",
    "lint": "tslint *.tsx,index.ts",
    "prepare": "npm run build",
    "prepublishOnly": "npm run lint && ava",
    "build": "bili index.ts --format cjs --format umd --format esm --bundle-node-modules --external react --module-name use-model"
  },
  "husky": {
    "hooks": {
      "pre-commit": "npm run lint && ava"
    }
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/ShirasawaSama/use-model.git"
  },
  "keywords": [
    "react",
    "hooks",
    "immer",
    "state",
    "global"
  ],
  "author": "Shirasawa",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/ShirasawaSama/use-model/issues"
  },
  "homepage": "https://github.com/ShirasawaSama/use-model#readme",
  "devDependencies": {
    "@istanbuljs/nyc-config-typescript": "^0.1.3",
    "@types/enzyme": "^3.10.3",
    "@types/react-dom": "^16.9.0",
    "ava": "^2.3.0",
    "bili": "^4.8.1",
    "codecov": "^3.5.0",
    "enzyme": "^3.10.0",
    "enzyme-adapter-react-16": "^1.14.0",
    "husky": "^3.0.5",
    "jsdom": "^15.1.1",
    "nyc": "^14.1.1",
    "parcel": "^1.12.3",
    "react": "^16.9.0",
    "react-addons-test-utils": "^15.6.2",
    "react-dom": "^16.9.0",
    "rollup-plugin-typescript2": "^0.24.2",
    "source-map-support": "^0.5.13",
    "ts-node": "^8.3.0",
    "tslint": "^5.19.0",
    "tslint-config-standard": "^8.0.1",
    "tslint-react": "^4.0.0",
    "typescript": "^3.6.2"
  },
  "dependencies": {
    "@types/react": "^16.9.2",
    "immer": "^3.2.0"
  },
  "peerDependencies": {
    "react": "^16.9.0"
  },
  "ava": {
    "require": [
      "source-map-support/register",
      "ts-node/register",
      "esm"
    ],
    "compileEnhancements": false,
    "extensions": [
      "tsx"
    ]
  },
  "nyc": {
    "exclude": [
      "test.tsx"
    ],
    "extends": "@istanbuljs/nyc-config-typescript"
  }
}
